<div class="row" style=" margin-right: 50px">
    @foreach (var item in Model)
    {
        <div class="col-3" style="margin-top: 20px">
            <div style="background-color: white">
                <a href="/Home/ProductDetails/@item.Id"><img class="card-img-top" src="~/images/@item.ProductImagePath" alt="Card image" style="width:220px; height:250px;"></a>

                <h5 id="ProductTiteleid">@item.ProductTitle</h5>
                <b><span class="currency">৳  @item.ProductPrice</span></b>
            </div>
            @*<div style="width: auto; margin-top: 10px">
                @Html.ActionLink("Buy Now", "OderProduct", "Home", new { id = item.Id }, new { @class = "btn btn-primary", style = "width: auto; height:40px; color:white" })
                @Html.ActionLink("Add to Cart", "AddToCart", "Home", new { id = item.Id, qnt = 1 }, new { @class = "btn btn-danger", style = "width: 110px" })
            </div>*@
        </div>
    }
</div>

<div class="d-flex justify-content-end" style="text-align: right">
    <ul class="pagination pagination-sm">
        @{
            int i;
        }
        @for (i = 1; i <= ViewBag.total; i++)
        {
            if (i == ViewBag.CurrentPage)
            {
                <li class="page-item active">
                    <span class="page-link">@i</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    @Html.ActionLink(i.ToString(), "Necklece", "Home", new { page = i }, new { @class = "page-link" })
                </li>
            }
        }
    </ul>
</div>
